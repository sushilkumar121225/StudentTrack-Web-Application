@using Microsoft.AspNetCore.Identity
@using StudentTrack.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>StudentTrack</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <style>
        .navbar-gradient {
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
            padding: 20px 0;
        }

        .nav-link {
            color: #fff !important;
            font-weight: 500;
            position: relative;
            border-radius: 12px;
            transition: all 0.3s ease;
            padding: 10px 20px;
        }

        .nav-link:hover, .nav-link.active-link {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .nav-link.active-link::after {
            content: '';
            position: absolute;
            bottom: -6px;
            left: 50%;
            transform: translateX(-50%);
            width: 60%;
            height: 6px;
            background: #fff;
            border-radius: 10px 10px 0 0;
        }

        .navbar-brand img {
            width: 60px;
            height: 60px;
        }

        .navbar-title {
            font-size: 2rem;
            margin-left: 10px;
            color: #fff !important;
            font-weight: bold;
        }

        .custom-toggler {
            font-size: 28px;
            color: #fff;
            border: none;
            background: transparent;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-gradient">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/pictures/logo.png" alt="Logo" />
                <span class="navbar-title">StudentTrack</span>
            </a>

            <button class="custom-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                ☰
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">

                @functions{
                    bool IsActive(string controller, string action = null)
                    {
                        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
                        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

                        if (!string.IsNullOrEmpty(action))
                        {
                            return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase)
                                && currentAction.StartsWith(action, StringComparison.OrdinalIgnoreCase);
                        }
                        else
                        {
                            return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase);
                        }
                    }
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        @* ------------------ ADMIN LINKS ------------------ *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Dashboard", "Admin") ? "active-link" : "")"
                                   href="@Url.Action("Admin", "Dashboard")">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Admin", "Students") ? "active-link" : "")"
                                   href="@Url.Action("Students", "Admin")">Students</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Admin", "Teachers") ? "active-link" : "")"
                                   href="@Url.Action("Teachers", "Admin")">Teachers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Admin", "Users") ? "active-link" : "")"
                                   href="@Url.Action("Users", "Admin")">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Admin", "Subjects") ? "active-link" : "")"
                                   href="@Url.Action("Subjects", "Admin")">Subjects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Admin", "Classes") ? "active-link" : "")"
                                   href="@Url.Action("Classes", "Admin")">Classes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Admin", "Files") ? "active-link" : "")"
                                   href="@Url.Action("Files", "Admin")">Files</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Admin", "Query") ? "active-link" : "")"
                                   href="@Url.Action("Query", "Admin")">Query</a>
                            </li>
                        }

                        @* ------------------ TEACHER LINKS ------------------ *@
                        else if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Dashboard", "Teacher") ? "active-link" : "")"
                                   href="@Url.Action("Teacher", "Dashboard")">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Teacher", "Profile") ? "active-link" : "")"
                                   href="@Url.Action("Profile", "Teacher")">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Teacher", "Students") ? "active-link" : "")"
                                   href="@Url.Action("Students", "Teacher")">Students List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Teacher", "Attendance") ? "active-link" : "")"
                                   href="@Url.Action("Attendance", "Teacher")">Take Attendance</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Teacher", "UploadContent") ? "active-link" : "")"
                                   href="@Url.Action("UploadContent", "Teacher")">Upload Content</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Teacher", "MyContent") ? "active-link" : "")"
                                   href="@Url.Action("MyContent", "Teacher")">My Content</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Teacher", "Query") ? "active-link" : "")"
                                   href="@Url.Action("Query", "Teacher")">Query</a>
                            </li>
                        }

                        @* ------------------ STUDENT LINKS ------------------ *@
                        else if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Dashboard", "Student") ? "active-link" : "")"
                                   href="@Url.Action("Student", "Dashboard")">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Student", "Profile") ? "active-link" : "")"
                                   href="@Url.Action("Profile", "Student")">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Student", "Attendance") ? "active-link" : "")"
                                   href="@Url.Action("Attendance", "Student")">Attendance</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Student", "UploadDocuments") ? "active-link" : "")"
                                   href="@Url.Action("UploadDocuments", "Student")">Upload Documents</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Student", "MyFiles") ? "active-link" : "")"
                                   href="@Url.Action("MyFiles", "Student")">My Files</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Student", "Creativity") ? "active-link" : "")"
                                   href="@Url.Action("Creativity", "Student")">Create Portfolio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsActive("Student", "Query") ? "active-link" : "")"
                                   href="@Url.Action("Query", "Student")">Query</a>
                            </li>
                        }
                    </ul>

                    @* Logout button separate ul *@
                    <ul class="navbar-nav ms-3">
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="event.preventDefault(); document.getElementById('logoutForm').submit();">Logout</a>
                        </li>
                    </ul>
                    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-none"></form>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
