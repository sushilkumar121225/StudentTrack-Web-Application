@{
    ViewData["Title"] = "Attendance";
}

<div class="container mt-5">
    <h2 class="fw-bold text-warning">Attendance</h2>
    <p>Mark or view student attendance here.</p>

    <div class="table-responsive shadow rounded mt-3">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example rows -->
                <tr>
                    <td>1</td>
                    <td>John Doe</td>
                    <td>12-Oct-2025</td>
                    <td>Present</td>
                    <td><button class="btn btn-sm btn-primary">Update</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
