@* @model IEnumerable<StudentTrack.Models.Student> *@
@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-5">
    <h2 class="fw-bold text-success">Students List</h2>
    <div class="table-responsive shadow rounded mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Class</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.Name</td>
                        <td>@student.Email</td>
                        <td>@student.Class</td>
                        <td>
                            <a href="/Teacher/StudentDetails/@student.Id" class="btn btn-sm btn-info">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
