@* @model IEnumerable<StudentTrack.Models.Content> *@
@{
    ViewData["Title"] = "My Uploaded Content";
}

<div class="container mt-5">
    <h2 class="fw-bold text-dark">My Uploaded Content</h2>
    <div class="table-responsive shadow rounded mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>File</th>
                    <th>Uploaded On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var content in Model)
                {
                    <tr>
                        <td>@content.Title</td>
                        <td><a href="@content.FilePath" target="_blank">View File</a></td>
                        <td>@content.UploadedOn.ToString("dd-MMM-yyyy")</td>
                        <td>
                            <a href="/Teacher/EditContent/@content.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/Teacher/DeleteContent/@content.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
