@{
    ViewData["Title"] = "Student Profile";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - StudentTrack</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #74ebd5, #ACB6E5);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        .profile-container {
            max-width: 800px;
            margin: 60px auto;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            animation: fadeIn 1s ease-in-out;
        }

        .profile-header {
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            padding: 40px;
            text-align: center;
            color: #fff;
        }

            .profile-header img {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                border: 4px solid #fff;
                object-fit: cover;
                margin-bottom: 15px;
            }

            .profile-header h2 {
                font-weight: 700;
            }

        .profile-details {
            padding: 30px 40px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 15px;
            transition: 0.3s;
        }

            .form-control:focus {
                border-color: #6a11cb;
                box-shadow: 0 0 8px rgba(106, 17, 203, 0.4);
            }

        .btn-save {
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            border: none;
            padding: 12px 30px;
            border-radius: 10px;
            color: #fff;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-save:hover {
                transform: scale(1.05);
                background: linear-gradient(90deg, #2575fc, #6a11cb);
            }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .save-message {
            text-align: center;
            font-weight: 600;
            color: green;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="profile-container shadow">
        <div class="profile-header">
            <img src="~/pictures/student-avatar.png" alt="Student Avatar" id="profilePic" />
            <h2 id="studentName">Student Name</h2>
            <p id="studentDept">Department</p>
        </div>

        <div class="profile-details">
            <form id="profileForm">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Full Name</label>
                        <input type="text" id="nameInput" class="form-control" placeholder="Enter your full name" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Department</label>
                        <input type="text" id="deptInput" class="form-control" placeholder="Enter department" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" id="emailInput" class="form-control" placeholder="example@student.com" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone Number</label>
                        <input type="text" id="phoneInput" class="form-control" placeholder="Enter phone number" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <textarea id="addressInput" class="form-control" rows="3" placeholder="Enter your address"></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn-save">💾 Save Profile</button>
                </div>

                <div id="saveMessage" class="save-message"></div>
            </form>
        </div>
    </div>

    <script>
        // Load saved profile data (if any)
        window.onload = function () {
            if (localStorage.getItem("studentProfile")) {
                const data = JSON.parse(localStorage.getItem("studentProfile"));
                document.getElementById("nameInput").value = data.name;
                document.getElementById("deptInput").value = data.dept;
                document.getElementById("emailInput").value = data.email;
                document.getElementById("phoneInput").value = data.phone;
                document.getElementById("addressInput").value = data.address;

                document.getElementById("studentName").innerText = data.name || "Student Name";
                document.getElementById("studentDept").innerText = data.dept || "Department";
            }
        };

        // Save profile to localStorage
        document.getElementById("profileForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const profileData = {
                name: document.getElementById("nameInput").value,
                dept: document.getElementById("deptInput").value,
                email: document.getElementById("emailInput").value,
                phone: document.getElementById("phoneInput").value,
                address: document.getElementById("addressInput").value
            };

            localStorage.setItem("studentProfile", JSON.stringify(profileData));

            document.getElementById("studentName").innerText = profileData.name;
            document.getElementById("studentDept").innerText = profileData.dept;
            document.getElementById("saveMessage").innerText = "✅ Profile saved successfully!";
            setTimeout(() => {
                document.getElementById("saveMessage").innerText = "";
            }, 3000);
        });
    </script>
</body>
</html>
