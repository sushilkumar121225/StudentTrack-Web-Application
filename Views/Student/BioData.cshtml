@{
    ViewData["Title"] = "Bio Data Creator";
}

<div class="container mt-5">
    <h2 class="text-center text-warning fw-bold mb-4">🧍‍♂️ Create Bio Data</h2>

    <form class="bg-light p-4 rounded shadow">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="bioName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Date of Birth</label>
            <input type="date" class="form-control" id="bioDob" />
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" id="bioAddress" />
        </div>
        <button type="button" class="btn btn-warning text-white" onclick="createBio()">Generate</button>
    </form>
</div>

<script>
    function createBio() {
        const name = bioName.value, dob = bioDob.value, addr = bioAddress.value;
        const txt = `Name: ${name}\nDOB: ${dob}\nAddress: ${addr}`;
        const blob = new Blob([txt], { type: "text/plain" });
        const link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = `${name}_BioData.txt`;
        link.click();
    }
</script>
