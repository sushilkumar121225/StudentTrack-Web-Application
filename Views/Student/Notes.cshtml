@{
    ViewData["Title"] = "Notes Editor";
}

<div class="container mt-5">
    <h2 class="text-center text-danger fw-bold mb-4">📝 Write and Customize Notes</h2>

    <div class="bg-light p-4 rounded shadow">
        <div class="mb-3 d-flex align-items-center">
            <select id="fontSelect" class="form-select w-auto me-2" onchange="changeFont()">
                <option value="Poppins">Poppins</option>
                <option value="Courier New">Courier New</option>
                <option value="Times New Roman">Times New Roman</option>
            </select>
            <input type="number" id="fontSize" value="16" min="12" max="40" class="form-control w-auto me-2" onchange="changeFontSize()" />
            <input type="color" id="bgColor" class="form-control form-control-color" onchange="changeBg()" />
        </div>

        <div contenteditable="true" id="noteEditor" style="min-height:250px;" class="border rounded p-3 bg-white">
            Start typing your notes here...
        </div>

        <div class="mt-3 text-end">
            <button class="btn btn-success me-2" onclick="downloadNotes()">Download</button>
            <button class="btn btn-danger" onclick="clearNotes()">Clear</button>
        </div>
    </div>
</div>

<script>
    function changeFont() {
        noteEditor.style.fontFamily = fontSelect.value;
    }
    function changeFontSize() {
        noteEditor.style.fontSize = fontSize.value + "px";
    }
    function changeBg() {
        noteEditor.style.background = bgColor.value;
    }
    function clearNotes() {
        noteEditor.innerText = "";
    }
    function downloadNotes() {
        const text = noteEditor.innerText;
        const blob = new Blob([text], { type: "text/plain" });
        const link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = "MyNotes.txt";
        link.click();
    }
</script>
