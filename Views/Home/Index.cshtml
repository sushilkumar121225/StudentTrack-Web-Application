@{
    ViewData["Title"] = "StudentTrack - Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(145deg, #f0f4f8, #d9e2ec);
            margin: 0;
        }

        a.btn {
            transition: all 0.3s ease;
        }

            a.btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
            }

        /* Hero Section */
        .hero {
            background: linear-gradient(90deg, #4facfe, #00f2fe);
            color: white;
            padding: 50px 20px 40px 20px; /* reduced height */
            text-align: center;
            border-radius: 0 0 50px 50px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

            .hero h1 {
                font-size: 3rem; /* slightly smaller */
                font-weight: 800;
                margin-bottom: 15px;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
            }

            .hero p {
                font-size: 1.3rem; /* slightly smaller */
                font-weight: 400;
            }

        /* Carousel */
        .carousel-inner img {
            height: 400px; /* optional: slightly smaller for balance */
            object-fit: cover;
        }

        .carousel-caption h5 {
            font-size: 1.6rem;
            font-weight: 700;
        }

        .carousel-caption p {
            font-size: 1rem;
        }

        /* Role Cards */
        .role-card {
            transition: all 0.4s ease;
            border-radius: 20px;
        }

            .role-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
            }

        /* Quick Links */
        .quick-links a.btn {
            font-weight: 500;
            border-radius: 30px;
            padding: 10px 20px;
        }

        /* Footer */
        footer {
            background: linear-gradient(90deg, #4facfe, #00f2fe);
            color: white;
            padding: 30px 20px;
            width: 100%;
            font-size: 1.1rem;
            font-weight: 500;
            text-align: center;
            box-shadow: 0 -6px 20px rgba(0, 0, 0, 0.1);
            border-radius: 50px 50px 0 0;
            margin-top: 60px;
        }

        @@media (max-width: 768px) {
            .hero h1

        {
            font-size: 2.5rem;
        }

        .hero p {
            font-size: 1.2rem;
        }

        .carousel-inner img {
            height: 300px;
        }

        }
    </style>
</head>

<body>
    <!-- Hero Section -->
    <section class="hero">
        <h1>🎓 StudentTrack</h1>
        <p>A Smart Student Information Management System</p>
    </section>

    <div class="container mt-5">

        <!-- Carousel -->
        <div id="homeCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
            <div class="carousel-inner rounded shadow-lg">
                <div class="carousel-item active">
                    <img src="~/pictures/st1.jpg" class="d-block w-100" alt="Education">
                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                        <h5>Manage Students Easily</h5>
                        <p>Track attendance, grades, and progress at one place.</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="~/pictures/st2.png" class="d-block w-100" alt="Teacher">
                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                        <h5>Empower Teachers</h5>
                        <p>Upload and manage course content seamlessly.</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="~/pictures/st3.png" class="d-block w-100" alt="Students">
                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                        <h5>Better Student Experience</h5>
                        <p>Access study materials, documents, and profile anytime.</p>
                    </div>
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <!-- Role Cards -->
        <div class="row text-center mb-5">
            <div class="col-md-4 mb-3">
                <div class="card role-card shadow h-100 border-0">
                    <div class="card-body">
                        <h3 class="card-title text-primary">👩‍🎓 Student</h3>
                        <p class="card-text text-muted">Register with a Student ID, access profile, upload and manage your files easily.</p>
                        <a href="/Account/Login" class="btn btn-outline-primary">Login as Student</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card role-card shadow h-100 border-0">
                    <div class="card-body">
                        <h3 class="card-title text-success">👨‍🏫 Teacher</h3>
                        <p class="card-text text-muted">Login with Teacher ID, manage students, upload and share content effectively.</p>
                        <a href="/Account/Login" class="btn btn-outline-success">Login as Teacher</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card role-card shadow h-100 border-0">
                    <div class="card-body">
                        <h3 class="card-title text-danger">🛡️ Admin</h3>
                        <p class="card-text text-muted">Secure login for Admin to manage dashboard, students, teachers, and system data.</p>
                        <a href="/Account/Login" class="btn btn-outline-danger">Login as Admin</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="text-center mb-5 quick-links">
            <h4 class="fw-bold">📌 Quick Links</h4>
            <a href="/Account/Register" class="btn btn-primary m-2">Register</a>
            <a href="/Pages/About" class="btn btn-secondary m-2">About</a>
            <a href="/Pages/ContactUs" class="btn btn-info m-2">Contact Us</a>
            <a href="/Pages/Help" class="btn btn-warning m-2">Help</a>
            <a href="/Pages/Privacy" class="btn btn-success m-2">Privacy</a>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p class="mb-0">© @DateTime.Now.Year StudentTrack | All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
