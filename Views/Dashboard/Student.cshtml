@{
    ViewData["Title"] = "Student Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f1f8e9, #e3f2fd);
            margin: 0;
            padding: 0;
        }

        /* Hero Section */
        .dash-hero {
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            color: white;
            padding: 50px 30px;
            border-radius: 0 0 40px 40px;
            text-align: center;
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

            .dash-hero .welcome {
                font-size: 2rem;
                font-weight: 700;
            }

            .dash-hero .muted {
                font-size: 1.1rem;
                opacity: 0.9;
            }

        /* Grid Cards Container */
        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 25px;
            padding: 40px;
            max-width: 1200px;
            margin: auto;
        }

        /* Each Card */
        .card-tile {
            border-radius: 20px;
            padding: 25px;
            color: white;
            text-decoration: none;
            text-align: center;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            transition: all 0.35s ease;
            position: relative;
            overflow: hidden;
        }

            .card-tile:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.2);
            }

        /* Icon */
        .card-icon {
            font-size: 50px;
            margin-bottom: 10px;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.15);
        }

        .card-tile h3 {
            font-weight: 700;
            margin-bottom: 8px;
        }

        .card-tile p {
            font-size: 0.95rem;
            opacity: 0.95;
        }

        /* Card Colors */
        .profile-card {
            background: linear-gradient(135deg, #42a5f5, #5c6bc0);
        }

        .attendance-card {
            background: linear-gradient(135deg, #66bb6a, #43a047);
        }

        .upload-card {
            background: linear-gradient(135deg, #fdd835, #ffca28);
            color: #333;
        }

        .files-card {
            background: linear-gradient(135deg, #26c6da, #00acc1);
        }

        .creativity-card {
            background: linear-gradient(135deg, #ab47bc, #8e24aa);
            grid-column: span 2; /* Double width */
        }

        .query-card {
            background: linear-gradient(135deg, #ff6a00, #ffb347);
            grid-column: span 2; /* Double width */
        }

        /* Floating Animations */
        @@keyframes float {
            0%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-6px);
        }

        100% {
            transform: translateY(0);
        }

        }

        .card-tile:nth-child(odd) {
            animation: float 3.5s ease-in-out infinite;
        }

        .card-tile:nth-child(even) {
            animation: float 4s ease-in-out infinite;
        }

        /* Footer */
        footer {
            text-align: center;
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            color: white;
            padding: 20px;
            border-radius: 40px 40px 0 0;
            font-weight: 500;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .dash-hero .welcome

        {
            font-size: 1.6rem;
        }

        .cards {
            padding: 20px;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        }

        .card-icon {
            font-size: 40px;
        }

        .creativity-card,
        .query-card {
            grid-column: span 1; /* stack normally on mobile */
        }

        }
    </style>
</head>

<body>

    <!-- Hero Section -->
    <section class="dash-hero">
        <div class="welcome">Welcome back, <span id="stuName">Student</span> 👋</div>
        <p class="muted">Manage your profile, check attendance, and access your creative world easily.</p>
    </section>

    <!-- Cards Section -->
    <section class="cards">

        <a href="@Url.Action("Profile", "Student")" class="card-tile profile-card">
            <div class="card-icon">👤</div>
            <h3>Profile</h3>
            <p>View or edit your personal details and academic info.</p>
        </a>

        <a href="@Url.Action("Attendance", "Student")" class="card-tile attendance-card">
            <div class="card-icon">🗓️</div>
            <h3>Attendance</h3>
            <p>Track your daily attendance and overall percentage.</p>
        </a>

        <a href="@Url.Action("UploadDocuments", "Student")" class="card-tile upload-card">
            <div class="card-icon">📁</div>
            <h3>Upload Documents</h3>
            <p>Submit assignments, reports, or ID proofs securely.</p>
        </a>

        <a href="@Url.Action("MyFiles", "Student")" class="card-tile files-card">
            <div class="card-icon">📚</div>
            <h3>My Files</h3>
            <p>Access study materials and teacher-uploaded content.</p>
        </a>

        <a href="@Url.Action("Creativity", "Student")" class="card-tile creativity-card">
            <div class="card-icon">🎨</div>
            <h3>Creativity Hub</h3>
            <p>Create resumes, biodata, portfolios, and digital notes.</p>
        </a>

        <a href="@Url.Action("Query", "Student")" class="card-tile query-card">
            <div class="card-icon">❓</div>
            <h3>Query And Feedback</h3>
            <p>Send your questions or feedback directly to your teacher or admin.</p>
        </a>

    </section>

    <!-- Footer -->
    <footer>
        <p>© @DateTime.Now.Year StudentTrack | Student Portal</p>
    </footer>

    <script>
        // Display student's name dynamically from localStorage or server variable
        document.addEventListener('DOMContentLoaded', () => {
            const name = localStorage.getItem('student_name') || 'Student';
            document.getElementById('stuName').textContent = name;
        });
    </script>

</body>
</html>
