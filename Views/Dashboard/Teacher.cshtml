@{
    ViewData["Title"] = "Teacher Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(145deg, #e0f7fa, #f1f8e9);
            margin: 0;
            padding: 0;
        }

        .dashboard-header {
            background: linear-gradient(90deg, #42a5f5, #66bb6a);
            color: white;
            padding: 50px 20px;
            border-radius: 0 0 40px 40px;
            text-align: center;
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

            .dashboard-header h2 {
                font-size: 2.5rem;
                font-weight: 700;
            }

            .dashboard-header p {
                font-size: 1.2rem;
                opacity: 0.9;
            }

        .dashboard-card {
            border: none;
            border-radius: 20px;
            color: white;
            padding: 25px;
            transition: all 0.4s ease;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            min-height: 220px; /* Ensure all cards same height */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            animation: float 3.5s ease-in-out infinite;
        }

            .dashboard-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 25px rgba(0,0,0,0.2);
            }

        .profile-card {
            background: linear-gradient(135deg, #2196f3, #6ec6ff);
        }

        .students-card {
            background: linear-gradient(135deg, #43a047, #81c784);
        }

        .attendance-card {
            background: linear-gradient(135deg, #fdd835, #fff176);
            color: #333;
        }

        .upload-card {
            background: linear-gradient(135deg, #00acc1, #4dd0e1);
        }

        .content-card {
            background: linear-gradient(135deg, #8e24aa, #ce93d8);
        }

        .query-card {
            background: linear-gradient(135deg, #ff6a00, #ffb347);
        }

        .dashboard-card h4 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .dashboard-card p {
            flex-grow: 1;
        }

        .dashboard-card a.btn {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            border-radius: 30px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .dashboard-card a.btn:hover {
                background: white;
                color: #333;
            }

        @@keyframes float {
            0%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-8px);
        }

        100% {
            transform: translateY(0);
        }

        }

        .dashboard-card:nth-child(even) {
            animation-duration: 4s;
        }

        @@media (max-width: 768px) {
            .dashboard-header h2

        {
            font-size: 2rem;
        }

        .dashboard-card {
            margin-bottom: 20px;
            min-height: auto;
        }

        }
    </style>
</head>

<body>

    <!-- Header Section -->
    <div class="dashboard-header">
        <h2>👨‍🏫 Teacher Dashboard</h2>
        <p>Welcome back! Manage your students, attendance, and materials easily.</p>
    </div>

    <!-- Dynamic Card Section -->
    <div class="container my-5">
        <div class="row g-4 text-center">

            <!-- Row 1 -->
            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card profile-card">
                    <h4>👤 Profile</h4>
                    <p>View and edit your personal and academic information.</p>
                    <a href="/Teacher/Profile" class="btn mt-2">Go to Profile</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card students-card">
                    <h4>📋 Students List</h4>
                    <p>View, manage, and communicate with your students.</p>
                    <a href="/Teacher/Students" class="btn mt-2">View Students</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card attendance-card">
                    <h4>📝 Attendance</h4>
                    <p>Record and track attendance for each class you handle.</p>
                    <a href="/Teacher/Attendance" class="btn mt-2 text-dark">Mark Attendance</a>
                </div>
            </div>

            <!-- Row 2 -->
            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card upload-card">
                    <h4>📤 Upload Content</h4>
                    <p>Upload notes, assignments, or resources for your students.</p>
                    <a href="/Teacher/UploadContent" class="btn mt-2">Upload Files</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card content-card">
                    <h4>📂 My Content</h4>
                    <p>View all the content you have uploaded to the system.</p>
                    <a href="/Teacher/MyContent" class="btn mt-2">View Content</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card query-card">
                    <h4>❓ Query & Feedback</h4>
                    <p>See student queries as well as send queries directly to admin.</p>
                    <a href="/Teacher/Query" class="btn mt-2">Click to Query</a>
                </div>
            </div>

        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center py-4 mt-5" style="background: linear-gradient(90deg, #42a5f5, #66bb6a); color: white; border-radius: 40px 40px 0 0;">
        <p class="mb-0">© @DateTime.Now.Year StudentTrack | Teacher Portal</p>
    </footer>

</body>
</html>
