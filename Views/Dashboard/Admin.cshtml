@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f1f8e9, #e3f2fd);
            margin: 0;
            padding: 0;
        }

        /* Header */
        .admin-header {
            background: linear-gradient(90deg, #1976d2, #42a5f5, #66bb6a);
            color: white;
            text-align: center;
            padding: 60px 20px;
            border-radius: 0 0 40px 40px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

            .admin-header h2 {
                font-size: 2.8rem;
                font-weight: 700;
            }

            .admin-header p {
                font-size: 1.2rem;
                opacity: 0.9;
            }

        /* Summary Cards */
        .summary-card {
            border-radius: 20px;
            color: white;
            text-align: center;
            padding: 25px 15px;
            font-weight: 600;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            animation: float 3.5s ease-in-out infinite;
        }

            .summary-card:hover {
                transform: translateY(-5px);
            }

        .bg-students {
            background: linear-gradient(135deg, #42a5f5, #1e88e5);
        }

        .bg-teachers {
            background: linear-gradient(135deg, #66bb6a, #43a047);
        }

        .bg-users {
            background: linear-gradient(135deg, #ef5350, #e53935);
        }

        .bg-subjects {
            background: linear-gradient(135deg, #ab47bc, #8e24aa);
        }

        .bg-classes {
            background: linear-gradient(135deg, #ffa726, #fb8c00);
        }

        .bg-files {
            background: linear-gradient(135deg, #26c6da, #00acc1);
        }

        /* Admin Functional Cards */
        .admin-card {
            border: none;
            border-radius: 25px;
            padding: 35px 25px;
            color: white;
            text-align: center;
            height: 100%;
            transition: all 0.4s ease;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            animation: float 4s ease-in-out infinite;
        }

            .admin-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 25px rgba(0,0,0,0.25);
            }

            .admin-card h3 {
                font-weight: 700;
                font-size: 1.6rem;
            }

            .admin-card p {
                font-size: 1rem;
                opacity: 0.9;
            }

            .admin-card a.btn {
                margin-top: 10px;
                background: rgba(255,255,255,0.25);
                color: white;
                border: none;
                border-radius: 30px;
                font-weight: 600;
                padding: 8px 18px;
                transition: all 0.3s ease;
            }

                .admin-card a.btn:hover {
                    background: white;
                    color: #333;
                }

        /* Floating Animations */
        @@keyframes float {
            0%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-6px);
        }

        100% {
            transform: translateY(0);
        }

        }

        /* Footer */
        footer {
            background: linear-gradient(90deg, #1976d2, #66bb6a);
            color: white;
            text-align: center;
            padding: 25px;
            border-radius: 40px 40px 0 0;
            margin-top: 60px;
        }

        @@media (max-width: 768px) {
            .admin-header h2

        {
            font-size: 2rem;
        }

        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <div class="admin-header">
        <h2>👑 Admin Dashboard</h2>
        <p>Welcome back, Admin! Manage your system efficiently and keep track of all records.</p>
    </div>

    <div class="container mt-5">

        <!-- Summary Section -->
        <div class="row g-4 mb-5 text-center">
            <div class="col-md-2 col-6">
                <div class="summary-card bg-students">Students<br /><span style="font-size:1.5rem;">120</span></div>
            </div>
            <div class="col-md-2 col-6">
                <div class="summary-card bg-teachers">Teachers<br /><span style="font-size:1.5rem;">18</span></div>
            </div>
            <div class="col-md-2 col-6">
                <div class="summary-card bg-users">Users<br /><span style="font-size:1.5rem;">150</span></div>
            </div>
            <div class="col-md-2 col-6">
                <div class="summary-card bg-subjects">Subjects<br /><span style="font-size:1.5rem;">35</span></div>
            </div>
            <div class="col-md-2 col-6">
                <div class="summary-card bg-classes">Classes<br /><span style="font-size:1.5rem;">10</span></div>
            </div>
            <div class="col-md-2 col-6">
                <div class="summary-card bg-files">Files<br /><span style="font-size:1.5rem;">58</span></div>
            </div>
        </div>

        <!-- Admin Functional Cards -->
        <div class="row g-4 text-center">
            <div class="col-lg-4 col-md-6">
                <div class="admin-card bg-students">
                    <h3>👩‍🎓 Students</h3>
                    <p>Manage student records, info, and documents efficiently.</p>
                    <a href="/Admin/Students" class="btn">Go to Students</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="admin-card bg-teachers">
                    <h3>👨‍🏫 Teachers</h3>
                    <p>Oversee teachers’ details, subjects, and responsibilities.</p>
                    <a href="/Admin/Teachers" class="btn">Go to Teachers</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="admin-card bg-users">
                    <h3>🧑‍💻 Users</h3>
                    <p>Control user access levels and manage role permissions.</p>
                    <a href="/Admin/Users" class="btn">Go to Users</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="admin-card bg-subjects">
                    <h3>📚 Subjects</h3>
                    <p>Manage subjects and link them with respective teachers.</p>
                    <a href="/Admin/Subjects" class="btn">Manage Subjects</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="admin-card bg-classes">
                    <h3>🏫 Classes</h3>
                    <p>Organize class schedules, sections, and assignments.</p>
                    <a href="/Admin/Classes" class="btn">View Classes</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="admin-card bg-files">
                    <h3>📂 Files</h3>
                    <p>Access uploaded materials, notes, and student files.</p>
                    <a href="/Admin/Files" class="btn">View Files</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>© @DateTime.Now.Year StudentTrack | Admin Portal</p>
    </footer>

</body>
</html>
