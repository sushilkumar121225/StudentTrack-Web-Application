@{
    ViewData["Title"] = "Admin - Received Queries";
}

<div class="container mt-5 shadow p-4 rounded" style="background: linear-gradient(135deg, #ffecd2, #fcb69f);">
    <h2 class="text-center text-danger fw-bold mb-4">📥 All Received Queries</h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover bg-white rounded">
                <thead class="table-danger">
                    <tr>
                        <th>Sender Email</th>
                        <th>Receiver Email</th>
                        <th>Message</th>
                        <th>Sent Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var query in Model)
                    {
                        <tr>
                            <td>@query.SenderEmail</td>
                            <td>@query.ReceiverEmail</td>
                            <td>@query.Message</td>
                            <td>@query.SentAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center text-muted">No queries received yet.</p>
    }
</div>

<style>
    table td, table th {
        vertical-align: middle;
        font-size: 15px;
    }
</style>
